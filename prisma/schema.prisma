// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  events    Event[]  @relation("HostEvents")
  votes     Vote[]
}

model Event {
  id          String      @id @default(uuid())
  title       String
  description String?
  image       String?
  host        User        @relation("HostEvents", fields: [hostId], references: [id])
  hostId      String
  dates       EventDate[]
  status      String      // 'draft' or 'published'
  createdAt   DateTime    @default(now())
}

model EventDate {
  id        String    @id @default(uuid())
  event     Event     @relation(fields: [eventId], references: [id])
  eventId   String
  date      DateTime
  votes     Vote[]
}

model Vote {
  id           String     @id @default(uuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  eventDate    EventDate  @relation(fields: [eventDateId], references: [id])
  eventDateId  String
  availability String     // 'available', 'maybe', 'unavailable'
}
